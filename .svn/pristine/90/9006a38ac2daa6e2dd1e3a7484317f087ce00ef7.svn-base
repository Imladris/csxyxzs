function handleMsg($form_Content){
    //处理微信接收的信息是否符合对应要求
    $operate=reduce_route($form_Content);
    $funcname = $operate[0];
    $params = $operate[1];

    if(array_key_exists($funcname,$route_list)){
        if(count($operate) == 1)
            $route_list[$funcname]();
        else{
            $route_list[$funcname]($params);
        }
        return true;
    }else{
        return false;
    }
}

function reduce_route($form_Content){

    switch ($form_Content) {
        case "关闭帮助": case "closehelp":
            return array("closehelp");
            break;
        case "exit": case "q":
            return array("exit");
            break;
        case "test":
            return array("test");
            break;
        case "绑定": case "bd":
